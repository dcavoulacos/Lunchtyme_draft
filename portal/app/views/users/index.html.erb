                <td><%= "Request Sent" %></td>
            <%# elsif @current_user.matchings.find_by(status: 'requested') %>
                <%#= link_to 'Accept', matchings_path(match_id: user.id), method: :post %>
            <% else %>
                <td><%= link_to 'Add to Lunch List', matchings_path(match_id: user.id), method: :post %></td>
            <% end %>
        <% end %>
      
      </tr>
    <% end %>
