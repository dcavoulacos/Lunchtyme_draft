<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>User </th>
     
      <th>Email </th>
      
      
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %> 
        <%if user.class_year && user.res_college %>
          (<%= user.res_college %> '<%= user.class_year-2000  %>)
        <% end%>
        </td>
        
        <td><%= user.email %></td>
        
       
        <td><%= link_to 'Show', user %></td>
        <% if @current_user == user %>
          <td><%= link_to 'Edit Profile', edit_user_path(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if @current_user != user %>
          <td id = 'request'><%= link_to 'Request Lunch', matchings_path(match_id: @current_user.id), method: :post %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

