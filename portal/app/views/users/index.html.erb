      <!-- <th>Email </th> -->
      
      
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        
       
        
        <%# if @current_user == user %>
          <%#= link_to 'Show', user %>
          <%#= link_to 'Edit Profile', edit_user_path(user) %>
          <%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%# end %>
        
        <% if user != @current_user %>


          <td><%= user.first_name %> <%= user.last_name %> 
