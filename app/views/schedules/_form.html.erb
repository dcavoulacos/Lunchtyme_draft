<%= simple_form_for(@schedule) do |f| %>

	<%= f.hidden_field :day, value: Time.now.strftime("%A") %>
	<strong>Today is </strong> <%= Time.now.strftime("%A (%m/%d)") %>	<br><br><br><br>

	<p><%= f.input :start_time, collection: [ "11:00", "11:15", "11:30", "11:45", "12:00", "12:15", "12:30", "12:45", "01:00", "01:15", "01:30", "01:45", "02:00", "02:15", "02:30", "02:45", "03:00" ]%></p><br>
	
	<%= f.input :end_time, collection: ["11:00", "11:15", "11:30", "11:45", "12:00", "12:15", "12:30", "12:45", "01:00", "01:15", "01:30", "01:45", "02:00", "02:15", "02:30", "02:45", "03:00"]%>

	<p><%= f.hidden_field :location, collection: ["Up Science Hill", "Commons, Silliman & TD", "Central Campus", "Payne Whitney, Morse & Stiles", "Chapel, Pierson & Davenport"] %></p><br><br><br><br><br>
	<div id="submit_button">
		<%= f.submit "" %>
	</div>
<% end %>